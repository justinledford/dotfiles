# settings
moveamount              20
sticky                  yes
gap                     30 30 30 30

# borders
borderwidth             6
color activeborder      "#e6dcdc"
color inactiveborder    "#ccc5c0"

# bindings
bind 4-Return           urxvt
bind 4-space            dmenu_run.sh

# move
bind 4-h                moveleft
bind 4-j                movedown
bind 4-k                moveup
bind 4-l                moveright
bind 4-H                bigmoveleft
bind 4-J                bigmovedown
bind 4-K                bigmoveup
bind 4-L                bigmoveright
mousebind 4-1           window_move

# resize
bind 4C-h                resizeleft
bind 4C-j                resizedown
bind 4C-k                resizeup
bind 4C-l                resizeright
bind 4C-H                bigresizeleft
bind 4C-J                bigresizedown
bind 4C-K                bigresizeup
bind 4C-L                bigresizeright

# cycle
bind 4-Tab              cycle
bind 4S-Tab             rcycle

# maximize
bind 4-v                vmaximize
bind 4-b                hmaximize
bind C4-f               fullscreen

# groups
bind 4-1                grouponly1
bind 4-2                grouponly2
bind 4-3                grouponly3
bind 4-4                grouponly4
bind 4-5                grouponly5
bind 4-6                grouponly6

bind 4S-1               movetogroup1
bind 4S-2               movetogroup2
bind 4S-3               movetogroup3
bind 4S-4               movetogroup4
bind 4S-5               movetogroup5
bind 4S-6               movetogroup6


bind 4-q                delete
bind 4S-r               restart
bind 4S-q               quit

bind M-j                unmap
bind M-k                unmap
bind M-h                unmap
bind M-l                unmap
bind M-J                unmap
bind M-K                unmap
bind M-H                unmap
bind M-L                unmap
bind MC-j               unmap
bind MC-k               unmap
bind MC-h               unmap
bind MC-l               unmap
bind MC-J               unmap
bind MC-K               unmap
bind MC-H               unmap
bind MC-L               unmap
bind M-Tab              unmap
bind MS-Tab             unmap
bind M-Return           unmap
mousebind M-1           unmap
bind C-slash            unmap
bind CM-x               unmap
